{% include "base.html.twig" %}

{# {% block title %}Dice{% endblock %} #}

{% block content %}

<body>
    {% include 'nav.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Kortspel 21</h2>
            </div>
        </div>
        <div id="table" class="row">
            <div>
                <div class="box">
                    <h3>Spelare:</h3>
                    {% for card in playerHand %} <img class="cards" src="{{ asset("img/cards/" ~ card ~ ".svg" ) }}"
                        width="105" height="145" alt="Testar kortnamn">
                    {% endfor %}
                </div>
            </div>
            <div>
                <div class="box">
                    <h3>Dealer:</h3>
                    {% for card in dealerHand %} <img class="cards" src="{{ asset("img/cards/" ~ card ~ ".svg" ) }}"
                        width="105" height="145" alt="">
                    {% endfor %}
                </div>
            </div>
        </div>
        <p id="message">{{message}}</p>
        <div id="buttons" class="row">

            <div class="buttons">
                <button onclick="window.location.href='?action=hit'" class="btn" id="btn1">Dra ett till kort</button>
                <button onclick="disableButton();window.location.href='?action=stand'" class="btn" id="btn2">Stanna</button>
                <button onclick="window.location.href='?action=new'" class="btn">Nytt spel</button>
            </div>
        </div>

        <div class="scoreboard">
            <table class="table-scoreboard">
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th class="text-right">Nuvarande totala po√§ng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><strong>Spelare</strong></td>
                        <td class="text-right">
                            {{playerScore}}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Dealer</strong></td>
                        <td class="text-right">
                            {{dealerScore}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% include 'footer.twig' %}
</body>

<script>
    function disableButton() {
        console.log("jag fungerar")
        let button = document.getElementById("btn2");
        let message = document.getElementById("message");
        console.log(button.innerHTML)
        console.log(message.innerHTML)
    };

</script>


{% endblock %}